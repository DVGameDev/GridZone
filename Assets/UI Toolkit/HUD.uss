/* ===================================================== */
/* =================== END TURN BUTTON ================= */
/* ===================================================== */

.end-turn-button {
position: absolute;
right: 16px;
bottom: 100px;
width: 100px;
height: 100px;
background-color: rgba(200, 50, 50, 0.9);
color: white;
border-radius: 16px;
font-size: 16px;
-unity-font-style: bold;
