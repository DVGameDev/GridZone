}
/* ===================================================== */
/* =================== ACTION BAR ====================== */
/* ===================================================== */

.action-bar {
    position: absolute;
    left: 16px;
    bottom: 140px; /* –ù–∞–¥ AP —Å—á–µ—Ç—á–∏–∫–æ–º */
    flex-direction: column; /* –í–µ—Ä—Ç–∏–∫–∞–ª—å–Ω—ã–π —Å—Ç–µ–∫ –∫–Ω–æ–ø–æ–∫ */
    justify-content: flex-end;
}

.action-button {
    width: 90px;
    height: 48px;
    margin-bottom: 8px; /* –û—Ç—Å—Ç—É–ø –º–µ–∂–¥—É –∫–Ω–æ–ø–∫–∞–º–∏ */
    border-radius: 8px;
    font-size: 16px;
    -unity-font-style: bold;
    color: white;
    border-width: 0;
    -unity-text-align: middle-center;
}

.move-btn {
    background-color: rgba(46, 204, 113, 0.9); /* Green */
}
.move-btn:hover { background-color: rgba(46, 204, 113, 1); }
.move-btn:active { background-color: rgba(39, 174, 96, 1); }

.effect-btn {
    background-color: rgba(155, 89, 182, 0.9); /* Purple */
}
.effect-btn:hover { background-color: rgba(155, 89, 182, 1); }
.effect-btn:active { background-color: rgba(142, 68, 173, 1); }

