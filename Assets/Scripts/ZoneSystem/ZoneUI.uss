/* –ö–æ–Ω—Ç–µ–π–Ω–µ—Ä—ã —Ü–≤–µ—Ç–æ—á–∫–æ–≤ */
.flower-container {
  position: absolute;
  width: 300px;
  height: 300px;
}

.flower-left {
  left: 20px;
  top: 20px;
}

.flower-right {
  right: 20px;
  top: 20px;
}

/* –•–µ–∫—Å—ã */
.hexagon {
  position: absolute;
  width: 60px;
  height: 60px;
  background-color: rgba(100, 100, 100, 0.5);
  border-radius: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.hex-label {
  color: #fff;
  font-size: 14px;
  -unity-font-style-and-weight: bold;
}

/* –ü–æ–∑–∏—Ü–∏–∏ —Ö–µ–∫—Å–æ–≤ */
.hex-pos-0 { left: 120px; top: 120px; }
.hex-pos-1 { left: 180px; top: 90px; }
.hex-pos-2 { left: 180px; top: 150px; }
.hex-pos-3 { left: 120px; top: 180px; }
.hex-pos-4 { left: 60px;  top: 150px; }
.hex-pos-5 { left: 60px;  top: 90px; }
.hex-pos-6 { left: 120px; top: 60px; }

/* –ö–Ω–æ–ø–∫–∏ —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è –¥–µ—Ç–µ–∫—Ç–æ—Ä–æ–º */
.detector-controls {
  position: absolute;
  right: 20px;
  top: 340px;
  flex-direction: row;
  width: 300px;
  height: 40px;
}

.detector-btn {
  width: 145px;
  height: 40px;
  margin: 0 2px;
  font-size: 14px;
  -unity-font-style-and-weight: bold;
  border-radius: 5px;
  border-width: 2px;
  background-color: rgba(40, 40, 50, 0.9);
  color: #fff;
}

.detector-btn:hover {
  background-color: rgba(60, 60, 80, 0.95);
}

.detector-btn-mode {
  border-color: rgba(100, 150, 255, 0.8);
}

.detector-btn-power {
  border-color: rgba(255, 150, 50, 0.8);
}

/* –ö–Ω–æ–ø–∫–∞ —É–ø—Ä–∞–≤–ª–µ–Ω–∏—è –¥–æ–∑–∏–º–µ—Ç—Ä–æ–º (–ª–µ–≤—ã–π —Ü–≤–µ—Ç–æ—á–µ–∫) */
.radiation-controls {
  position: absolute;
  left: 20px;
  top: 340px;
  flex-direction: row;
  width: 300px;
  height: 40px;
}

.radiation-btn {
  width: 300px;
  height: 40px;
  margin: 0;
  font-size: 14px;
  -unity-font-style-and-weight: bold;
  border-radius: 5px;
  border-width: 2px;
  border-color: rgba(100, 255, 100, 0.8);
  background-color: rgba(40, 50, 40, 0.9);
  color: #fff;
}

.radiation-btn:hover {
  background-color: rgba(60, 80, 60, 0.95);
  border-color: rgba(150, 255, 150, 0.9);
}

/* –ö–Ω–æ–ø–∫–∏ –æ—Ç–ª–∞–¥–∫–∏ */
.debug-btn-container {
  position: absolute;
  width: 200px;
  height: 30px;
}

.debug-btn-left {
  left: 70px;
  top: -10px;
}

.debug-btn-right {
  right: 70px;
  top: -10px;
}

.debug-btn {
  width: 200px;
  height: 30px;
  font-size: 12px;
  -unity-font-style-and-weight: bold;
  border-radius: 5px;
  border-width: 2px;
  border-color: rgba(255, 100, 255, 0.6);
  background-color: rgba(50, 20, 50, 0.8);
  color: #fff;
}

.debug-btn:hover {
  background-color: rgba(80, 40, 80, 0.9);
  border-color: rgba(255, 150, 255, 0.8);
}

/* –ö–æ–Ω—Ç–µ–π–Ω–µ—Ä –ø—Ä–æ–≥—Ä–µ—Å—Å–±–∞—Ä–∞ —Ä–∞–¥–∏–∞—Ü–∏–∏ */
.radiation-bar-container {
  position: absolute;
  left: 10px;
  top: 400px;
  width: 40px;
  height: 400px;
  background-color: rgba(40, 40, 40, 0.8);
  border-radius: 6px;
  overflow: hidden;
  justify-content: flex-end;
}

/* –ó–∞–ø–æ–ª–Ω–µ–Ω–∏–µ —Ä–∞–¥–∏–∞—Ü–∏–∏ */
.radiation-bar-fill {
  width: 100%;
  height: 0%;
  background-color: rgba(120, 255, 120, 0.9);
}

/* –ü–æ–¥–ø–∏—Å—å % —Ä–∞–¥–∏–∞—Ü–∏–∏ (—Å–≤–µ—Ä—Ö—É –ø–æ–ª–æ—Å—ã) */
.radiation-bar-label {
